<div class="container-fluid">
    <h2>Kaja-terv szerkesztése</h2>
    <form class="" role="form">
        <div class="small plan-info">
            {{#if authors}}
            <em>Szerkesztő:</em><span>{{authorList}}</span>
            {{/if}}
            {{#if created}}
            <em>Létrehozva:</em><span>{{createdDate}}</span>
            {{/if}}
            {{#if modified}}
            <em>Módosítva:</em><span>{{modifiedDate}}</span>
            {{/if}}
        </div>
        <div class="form-group">
            <label class="control-label" for="plan-title">Terv címe:</label>
            {{input type="text" placeholder="Cím" value=title id="plan-title" class="form-control"}}
        </div>
        <div class="form-group">
            <label class="control-label" for="plan-description">Leírás:</label>
            {{input type="text" placeholder="Leírás" value=description id="plan-description" class="form-control"}}
        </div>
        {{#if days}}
        <h3>Napok</h3>
        <div>
            {{#each day in days}}
            <div class="plan-day">
                <div>
                    {{input type="date" placeholder="Date" value=day.date id="" class="form-control"}}
                </div>
                {{#if day.meals}}
                <div class="meal-container panel panel-default">
                    {{#each meal in day.meals}}
                    <div class="meal">
                        <div class="meal-header">
                            <div class="meal-header-item">
                                <label>Étkezés tipusa:</label>
                                {{view "select"
                                   content=mealTypes
                                   optionValuePath="content.value"
                                   optionLabelPath="content.label"
                                   value=meal.type
                                   prompt="Valasz"}}
                            </div>
                            <div class="meal-header-item">
                                <div class="input-group">
                                    {{input type="text" placeholder="porció" value=meal.serving class="form-control"}}
                                    <span class="input-group-addon">fő</span>
                                </div>
                            </div>
                            <div class="meal-header-item">
                            {{input type="text" placeholder="Étel név" value=meal.foodName id="" class="form-control"}}
                            </div>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Étel</th>
                                    <th>per/fő</th>
                                    <!-- <th>egész</th> -->
                                    <th>píz</th>
                                </tr>
                            </thead>
                            {{#if meal.foods}}
                            <tbody>
                                {{#each food in meal.foods}}
                                <tr class="food-item" {{bind-attr data-serving=meal.serving data-food-id=food.food_id}}>
                                    <td class="food-name">
                                        {{input type="text" placeholder="food_id" value=food.food_id id="" class="form-control"}}
                                    </td>
                                    <td class="quantity">
                                        {{input type="number" placeholder="mennyiseg" value=food.est_quantity id="" class="form-control"}}
                                    </td>
                                    <!-- <td class="sum_quantity"></td> -->
                                    <td class="cost"></td>
                                </tr>
                                {{/each}}
                                <tr class="full-cost">
                                    <td colspan="2">
                                        Teljes ár
                                    </td>
                                    <td colspan="2">
                                        <span class="value"></span> rsd
                                    </td>
                                </tr>
                            </tbody>
                            {{/if}}
                        </table>
                        <button {{action 'addFood' meal}}>Plusz kaja</button>
                    </div>
                    {{/each}}

                </div>
                {{/if}}
                <button {{action 'addMeal' day}}>Plusz étkezés</button>
            </div>
            {{/each}}
        </div>
        {{/if}}
        <div>
        <button {{action 'addDay'}}>Plusz nap</button>
        </div>
    </form>
    <div class="clearfix">
        <button class="btn pull-right" {{action 'cancel'}}>Cancel</button>
        <button class="btn btn-primary pull-right" {{action 'save'}}>Save</button>
    </div>
</div>
